pipeline {
    agent any



    stages {
        stage('Build Docker Image') {
            steps {
                script {
                   sh 'chmod +x build.sh'
                         sh './build.sh'
                }
            }
        }

        stage('Push Docker Image') {
            steps {
                script {
                    sh 'docker login -u sounderajan -p Rajan@6380344602'
                    sh 'docker push sounderajan/prod'
                }
            }
        }

       
    }


        }



